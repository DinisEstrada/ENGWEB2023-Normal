extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
        each p,index in r
            if index === 0  
                h1 #{p.Espécie} [#{p.NomeCientífico}] #[a(href="/") VOLTAR]
    .w3-container
      table.w3-table-all.w3-hoverable
        tr
          th Id
          th Freguesia
          th Estado
          th Espécie  
          th Número de intervenções

        
        each p in r
          tr
            td
              a(href="/"+p._id)= p._id
            td= p.Freguesia
            td= p.Estado
            td 
              a(href="/especies/"+p.Espécie)= p.Espécie
            td= p.Númerodeintervenções
              
    footer.w3-container.w3-green
      h5 Generated for ENGWEB2023-Normal in #{d}